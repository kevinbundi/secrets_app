
<%= form_for Secret.new, remote: true do |f| %>
	<div class="form-group">
		<%= f.text_area :content, class: "form-control", rows: "3", placeholder: "Post a secret" %> 
	</div>
	<div class="form-group secrets_post_button clearfix">
		<%= f.submit value: "Post", class: "btn btn-info pull-right" %>
	</div>	
<% end %>