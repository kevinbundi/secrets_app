<%= form_for :session, url: sessions_path do |f| %>
	<h2 class="login_heading" style="background-color: #015c77";> <span><i class="fa fa-sign-in" aria-hidden="true"></i></span> Sign In</h2>
	<div class="form-group input-group margin-bottom-sm">
		<span class="input-group-addon"><i class="fa fa-user fa-fw  aria-hidden="true"></i></span>
		<%= f.text_field :username, placeholder: "Username", class: "form-control" %>
	</div>
	<div class="form-group input-group margin-bottom-sm">
		<span class="input-group-addon"><i class="fa fa-key fa-fw" aria-hidden="true"></i></span>
		<%= f.password_field :password, placeholder: "Password", class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.submit value: "Sign In", class:"btn btn-info btn-block" %>
	</div>
<% end %>